        print("here is some M&M's")
        return num
    else:
        num -= 1
        print("here is some M&M's")
        return num
    
candyamount = int(input("How many candy do you want?"))
for i in range(candyamount):
    candyamount = CandyDispenser(candyamount)
    
    
